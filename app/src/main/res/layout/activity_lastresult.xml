<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lastresult">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/result1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:orientation="horizontal"
                android:background="@drawable/stadu">
                <LinearLayout
                    android:id="@+id/myly1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
android:layout_gravity="center"
                        android:id="@+id/imgresult1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:id="@+id/textresult1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:id="@+id/textdate"
                        />

                    <TextView
                        android:gravity="center|top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/_25sdp"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:id="@+id/textresult"
                     />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/result2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                 >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
android:layout_gravity="center"
                        android:id="@+id/imgresult2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:id="@+id/textresult2"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:elevation="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_roundshape">
<ImageView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:id="@+id/plan1"
    android:src="@drawable/plan"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:src="@drawable/lines"/>
                    <ImageView
                        android:id="@+id/plan2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/plan"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#ffff"
                    android:text="Details"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:id="@+id/lastchat">

                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/chatt"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
</LinearLayout>