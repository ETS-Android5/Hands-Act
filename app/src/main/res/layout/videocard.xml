<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11.3dp"
        android:layout_marginBottom="11.3dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:outlineSpotShadowColor="#11e1e2e4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/takeid"/>
        <ImageView
            android:id="@+id/imagevideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:scaleType="fitXY"
            />
        <VideoView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/video"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:gravity="center|bottom"
            android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/_85sdp"
             android:orientation="horizontal"
             android:background="#00FFFFFF"
             >
             <ImageView
                 android:layout_width="@dimen/_60sdp"
                 android:layout_height="wrap_content"
                 android:background="#00FFFFFF"
                 android:src="@drawable/thumbnail"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/titlevideo"
                 android:textStyle="bold"
                 android:textColor="#FFFFFF"
                 android:layout_gravity="top"
                 android:gravity="top"
                 android:layout_margin="@dimen/_7sdp"
                 android:textSize="@dimen/_10sdp"
                 android:text="This was worked for me.This was worked for me.This was worked for me.This was worked for me."/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textStyle="bold"
                     android:gravity="bottom"
                     android:layout_gravity="bottom"
                     android:textColor="#A6FFF9F9"
                     android:text="Hands Act"
                     android:layout_marginBottom="@dimen/_10sdp"
                     android:layout_marginLeft="@dimen/_7sdp"
                     android:textSize="@dimen/_10sdp">

                 </TextView>
             </LinearLayout>
         </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>