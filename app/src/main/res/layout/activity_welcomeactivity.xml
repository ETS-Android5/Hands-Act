<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/handshands"
    tools:context=".welcomeactivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_weight="10"
        >
        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1.8"
            android:src="@drawable/thumbnail2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.9"
            android:paddingStart="@dimen/_15sdp"
            android:gravity="center|start"
            android:textColor="#fff"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:text="Welcome to HANDS AAST"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#fff"
            android:textSize="@dimen/_13sdp"
            android:text="Enjoy the experience "/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginTop="@dimen/_65sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:elevation="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:outlineSpotShadowColor="#000">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:id="@+id/signin"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:text="Sign in"
                                android:layout_weight="1"
                                android:background="@drawable/shapes"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"/>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shapes"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:id="@+id/signup"
                                android:text="Sign up"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1.5"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:orientation="horizontal"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:background="#36000000"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="#000"
                                    android:textSize="@dimen/_10sdp"
                                    android:gravity="top|center"
                                    android:textStyle="bold"
                                    android:text="Or connect using"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_20sdp"

                                    android:background="#36000000"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:id="@+id/welcomegoogle"
                                        android:layout_height="@dimen/_50sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="2"
                                        android:src="@drawable/google"/>


                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:id="@+id/welcomefacebook"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="2"
                                        android:src="@drawable/facebook"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"/>
        </LinearLayout>
</LinearLayout>




</LinearLayout>